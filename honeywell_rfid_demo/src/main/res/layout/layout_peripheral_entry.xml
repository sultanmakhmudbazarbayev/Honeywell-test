<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/device_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/peripheral_entry_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@id/icon"
        android:layout_toStartOf="@+id/peripheral_entry_rssi"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/peripheral_entry_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/peripheral_entry_address"
        android:layout_below="@id/peripheral_entry_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:textSize="12sp"/>
</RelativeLayout>