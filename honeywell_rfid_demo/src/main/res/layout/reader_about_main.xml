<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <include
        android:id="@+id/toolbar_layout"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/hon_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_layout"
        android:layout_marginStart="56dp"
        android:layout_marginTop="49dp"
        android:src="@drawable/hon_logo_big" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hon_logo"
        android:layout_alignLeft="@+id/hon_logo"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="#303030"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/version_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/copyright_tv"
        android:layout_alignEnd="@+id/copyright_tv"
        android:textColor="#606060"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/copyright_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="84dp"
        android:text="copyright@2019"
        android:textColor="#9E9E9E"
        android:textSize="14dp" />
</RelativeLayout>