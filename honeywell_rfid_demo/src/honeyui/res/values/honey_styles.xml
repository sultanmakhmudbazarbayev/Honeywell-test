<resources>
    <!--honeywell style-->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">
        <item name="actionOverflowButtonStyle">@style/HoneyToolbarOverflow</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/honey_background_color</item>
        <item name="tabStyle">@style/HoneyTabStyle</item>
        <item name="textInputStyle">@style/HoneyTextInputStyle</item>
        <item name="toolbarStyle">@style/HoneyToolbarStyle</item>
        <!--<item name="android:listPreferredItemPaddingStart">16dp</item>-->
        <item name="android:selectableItemBackground">@drawable/preference_selected_item_bg</item>
    </style>

    <style name="HoneyToolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/HoneyTitleTextAppearance</item>
    </style>

    <style name="HoneyTitleTextAppearance" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#373737</item>
        <item name="android:textStyle">normal</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="HoneyOutlinedButtonStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorAccent</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
    </style>

    <style name="HoneyToolbarOverflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/topbar_more</item>
    </style>

    <style name="HoneyToolbar">
        <item name="android:background">@android:color/white</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <style name="HoneyTabStyle" parent="@style/Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabTextColor">#808080</item>
        <item name="tabSelectedTextColor">#404040</item>
        <item name="tabBackground">@android:color/white</item>
        <item name="tabIndicatorColor">#1792E5</item>
        <item name="tabIndicatorHeight">4dp</item>
        <!--<item name="tabIndicatorFullWidth">false</item>-->
        <item name="tabIndicator">@drawable/honey_tab_indicator</item>
    </style>

    <style name="HoneyTextInputStyle" parent="@style/Widget.Design.TextInputLayout">
        <item name="boxStrokeColor">#C3C3C3</item>
        <item name="boxBackgroundColor">@android:color/white</item>
        <item name="boxBackgroundMode">outline</item>
    </style>
    <!--MainActivity-->
    <dimen name="menu_width">152dp</dimen>
    <dimen name="menu_height">120dp</dimen>
    <dimen name="menu_margin">24dp</dimen>

    <style name="menu_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#202020</item>
    </style>

    <style name="title_style">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <dimen name="title_margin_top">81dp</dimen>
    <dimen name="title_margin_left">24dp</dimen>

    <!--BT connect-->
    <!--Scan -->
    <style name="scan_info_style1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#303030</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="scan_info_style2">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="scan_info_style3">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#606060</item>
        <item name="android:maxLines">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="tag_info_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#303030</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BccRfidTitleStyle">
        <item name="android:textSize">36sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:minHeight">43dp</item>
        <item name="android:layout_marginTop">61dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
